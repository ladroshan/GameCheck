<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tassioauad.gamecatalog">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".GameCatalogApplication"
        android:theme="@style/AppTheme">

        <activity android:name=".view.activity.HomeActivity"
             android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.GameActivity"/>
        <activity android:name=".view.activity.PlatformActivity"/>
        <activity android:name=".view.activity.SearchGameActivity">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable_game" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.SearchPlatformActivity">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable_platform" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
    </application>

</manifest>
